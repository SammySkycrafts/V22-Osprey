<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>shadow.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <animation>
    <name>AllShadow</name>
    <object-name>shadow</object-name>
    <object-name>shadowL</object-name>
    <object-name>shadowR</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AllShadow</object-name>
    <condition>
      <and>
        <not><property>sim/freeze/replay-state</property></not>
        <not><property>sim/rendering/shadows/enabled</property></not>
      </and>
    </condition>
  </animation>
  
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>/orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
    <type>translate</type>
    <object-name>AllShadow</object-name>
    <property>sim/multiplay/generic/float[6]</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadowL</object-name>
    <property>/rotors/tail/blade[0]/position-deg</property>
    <center>
       <x-m> -1.57361 </x-m>
       <y-m> -7.04093 </y-m>
       <z-m>  0.00000 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadowR</object-name>
    <property>/rotors/tail/blade[0]/position-deg</property>
    <center>
      <x-m> -1.57361 </x-m>
      <y-m>  7.04093 </y-m>
      <z-m>  0.00000 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
